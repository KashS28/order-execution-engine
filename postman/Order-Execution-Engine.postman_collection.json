{
  "info": {
    "name": "Order Execution Engine",
    "description": "Complete API test collection for Order Execution Engine with DEX routing and WebSocket streaming",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "ws_url",
      "value": "ws://localhost:3000",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has correct structure', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData.status).to.eql('ok');",
              "    pm.expect(jsonData).to.have.property('timestamp');",
              "    pm.expect(jsonData).to.have.property('queue');",
              "});",
              "",
              "pm.test('Queue info is present', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.queue).to.have.property('activeConnections');",
              "    pm.expect(jsonData.queue.activeConnections).to.be.a('number');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        },
        "description": "Check system health and active WebSocket connections"
      },
      "response": []
    },
    {
      "name": "2. Create Market Order (Valid)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response contains orderId', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('orderId');",
              "    pm.expect(jsonData.orderId).to.be.a('string');",
              "    pm.expect(jsonData.orderId).to.match(/^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i);",
              "    ",
              "    // Save orderId for subsequent requests",
              "    pm.collectionVariables.set('orderId', jsonData.orderId);",
              "});",
              "",
              "pm.test('Response contains WebSocket URL', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('websocketUrl');",
              "    pm.expect(jsonData.websocketUrl).to.include('/stream');",
              "});",
              "",
              "pm.test('Response contains message', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('message');",
              "    pm.expect(jsonData.message).to.include('created successfully');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"market\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 1,\n  \"slippage\": 0.01\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Create a valid market order for 1 SOL → USDC swap"
      },
      "response": []
    },
    {
      "name": "3. Get Order Status",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Order has correct structure', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('order_id');",
              "    pm.expect(jsonData).to.have.property('order_type');",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData).to.have.property('token_in');",
              "    pm.expect(jsonData).to.have.property('token_out');",
              "});",
              "",
              "pm.test('Order status is valid', function () {",
              "    var jsonData = pm.response.json();",
              "    var validStatuses = ['pending', 'routing', 'building', 'submitted', 'confirmed', 'failed'];",
              "    pm.expect(validStatuses).to.include(jsonData.status);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/orders/{{orderId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "{{orderId}}"]
        },
        "description": "Query order status by orderId (uses orderId from previous request)"
      },
      "response": []
    },
    {
      "name": "4. WebSocket Connection Test",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Note: Use Postman's WebSocket tab or wscat to test WebSocket",
              "// WebSocket URL: ws://localhost:3000/api/orders/{{orderId}}/stream",
              "",
              "pm.test('Instructions displayed', function () {",
              "    console.log('='.repeat(60));",
              "    console.log('WebSocket Testing Instructions:');",
              "    console.log('='.repeat(60));",
              "    console.log('1. First, create an order using \"Create Market Order\"');",
              "    console.log('2. Copy the orderId from the response');",
              "    console.log('3. Open Postman WebSocket tab or use wscat:');",
              "    console.log('   wscat -c ws://localhost:3000/api/orders/{orderId}/stream');",
              "    console.log('4. You will receive real-time status updates:');",
              "    console.log('   - pending → routing → building → submitted → confirmed');",
              "    console.log('='.repeat(60));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        },
        "description": "WebSocket testing instructions - See test tab for details"
      },
      "response": []
